<link rel="stylesheet" href="/css/bootstrap/bootstrap.css">
<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="/css/responsive.css">
<div class="navbar-header">
  <a class="navbar-brand" href="/">
    <img src="img/logo-dark.png" alt="brand">
  </a>
</div>
<div id="login-land">
  <div class="container">
    <div class="horizontal-heading text-center">
      <h5>Welcome to Our Page
        <% if(error && error.length > 0){ %>
                <%= error %>
        <% } %>
        <% if(success && success.length > 0){ %>
                <%= success %>
        <% } %>
      </h5>
      <h2>We Are So<strong> Happy</strong>!</h2>
    </div>
    <div id="login">
      <form class="" action="/login" method="POST">
        <div class="row">
          <div class="col-md-3"></div>
          <div class="col-md-6 col-xs-12">
            <div class="form-group">
              <input type="text" class="form-control" id="username" name="username" placeholder="Your Username">
            </div>
          </div>
          <div class="col-md-3"></div>
          <div class="col-md-3"></div>
          <div class="col-md-6 col-xs-12">
            <div class="form-group">
              <input type="password" class="form-control" id="phone" name="password" placeholder="Password">
            </div>
          </div>
          <div class="col-md-3"></div>
        </div>
        <button id="btn-login" class="btn btn-general btn-yellow">Login</button>
      </form>
    </div>
  </div>
</div>
<%- include ("partials/footer")%>
